<div class="col-lg-12 stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Table with contextual classes</h4>
                    <p class="card-description"> Add product <code>.table-{color}</code>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-bordered table-contextual">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Name </th>
                            <th> Model </th>
                            <th> Price </th>
                            <th> Description </th>
                            <th> Image </th>
                            <th> Action </th>
                          </tr>
                        </thead>
                        <tbody>

                           {{#each product}} 
                            
                          <tr class="table-info">
                            <td> {{@index}} </td>
                            <td> {{this.name}} </td>
                            <td> {{this.model}} </td>
                            <td> {{this.price}} </td>
                            <td> {{this.description}} </td>
                            <td> <img src="/product-images/{{this._id}}.jpg" alt="" style="width: 70px; height:auto"> </td>
                            <td>
                              
                              <form action="/admin/edit-product" method="post">
                              <input type="text" value="{{this._id}}" name="id" id="" hidden>
                              <button class="btn btn-primary" type="submit">Edit</button>
                              </form>
                              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to permanently delete {{this.model}} ?')">Delete</a>
                            </td>
                          </tr>
                          {{/each}}
      
                        </tbody>
                      </table> 
                    </div>
                  </div>
                </div>
              </div> 